{
  "manifest_version": 3,
  "name": "Summarizer",
  "version": "1.0.1",
  "description": "Chrome extension for summarizing web pages",
  "action": {
    "default_title": "Click to view a popup",
    "default_popup": "sidepanel.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
